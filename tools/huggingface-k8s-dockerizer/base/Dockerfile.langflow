# taken from https://github.com/tlaanemaa/langflow-docker/blob/main/Dockerfile
FROM python:3.10-slim

RUN apt-get update && apt-get install -y gcc g++ git make curl nano -y
RUN useradd -m -u 1000 user
USER user
ENV HOME=/home/user \
    PATH=/home/user/.local/bin:$PATH

WORKDIR $HOME/app

RUN pip install langflow "gradio<4.0.0,>=3.0.0" -U --user

COPY --chown=user ./langflow $HOME/app



CMD ["langflow", "run", "--host", "0.0.0.0", "--port", "7860"]